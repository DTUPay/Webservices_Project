      responses:
        201:
          description: OK, payment created
          #TODO define response
        #TODO Add 4xx code for invalid requests? Invalid tokens?
        500:
          description: Unexpected internal error
          #TODO define response

  /merchant_service/report:
    #Generate a report for a merchant
